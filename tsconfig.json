{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "lib": ["es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./src/**/*.d.test.ts"]
}
